name: athletics-dashboard
region: nyc
services:
  - name: web
    image:
      registry_type: DOCR
      registry: registry.digitalocean.com
      repository: athletics-dashboard
      tag: TAG_TO_REPLACE
    http_port: 3000
    instance_count: 1
    instance_size_slug: basic-xxs
    routes:
      - path: /
    envs:
      - key: NODE_ENV
        value: production
        scope: RUN_TIME
      - key: NODE_VERSION
        value: "20"
        scope: RUN_AND_BUILD_TIME
      - key: NEXTAUTH_URL
        value: https://your-app.ondigitalocean.app
        scope: RUN_TIME
      - key: NEXTAUTH_SECRET
        scope: RUN_TIME
        type: SECRET
      - key: DATABASE_URL
        scope: RUN_AND_BUILD_TIME
        type: SECRET
      - key: RESEND_API_KEY
        scope: RUN_TIME
        type: SECRET
      - key: GOOGLE_CLIENT_ID
        scope: RUN_TIME
        type: SECRET
      - key: GOOGLE_CLIENT_SECRET
        scope: RUN_TIME
        type: SECRET
      - key: OPENAI_API_KEY
        scope: RUN_TIME
        type: SECRET