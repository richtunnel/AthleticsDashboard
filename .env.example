# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/athletics_dashboard?schema=public&connection_limit=20&pool_timeout=10"

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Public App URL (used for callbacks and Stripe redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# IP Geolocation Provider (for login tracking)
IPINFO_API_TOKEN="your-ipinfo-api-token"

# Google OAuth & Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/calendar-callback"

# Google Maps API (for travel time calculations)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# OpenWeatherMap API (for weather conditions)
OPENWEATHER_API_KEY="your-openweather-api-key"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="AD Hub <noreply@yourdomain.com>"

# OpenAI (for AI-powered travel recommendations)
OPENAI_API_KEY="sk-your-openai-api-key"

# Stripe Payment Processing
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_MONTHLY_PRICE_ID="price_your_monthly_price_id"
STRIPE_ANNUAL_PRICE_ID="price_your_annual_price_id"
NEXT_PUBLIC_STRIPE_MONTHLY_PRICE_ID="price_your_monthly_price_id"
NEXT_PUBLIC_STRIPE_ANNUAL_PRICE_ID="price_your_annual_price_id"

# Account Cleanup Automation
CRON_SECRET="your-shared-cron-secret"
ACCOUNT_DELETION_GRACE_DAYS="14"
ACCOUNT_DELETION_REMINDER_DAYS="7,1"

# Environment
NODE_ENV="development"
